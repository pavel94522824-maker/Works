#include <stdio.h>

int main() {
 int n;
 int i = 0;
 int binary[32]; // Массив для хранения битов
 printf("Введи положительное целое число:\n");
  scanf("%d", &n); // Запишем 8-ми битовое число в десятичной системе счисления
  while(n>0) {
    binary[i] = n % 2; // Сохраняем остаток
    n = n / 2;        // Делим число
    i++;   
    }
   
    // Вывод в обратном порядке
    for (int j = i-1; j >= 0; j--) {
        printf("%d", binary[j]);
    }
    return 0; 
}
